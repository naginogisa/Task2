


<body>
  <% if flash[:notice] %>
     <p id="notice"><%= flash[:notice] %></p>
   <% end  %>

  <h1>Books</h1>
      
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colespan="3"></th>
      </tr>
    </thead>
    <tbody>      
      <% @books.each do |book| %>
      <tr>
          <td><%= link_to book.title, book_path(book) %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show", book_path(book) %></td>
          <td><%= link_to "Edit", edit_book_path(book) %></td>
          <td><%= link_to "Destroy", destroy_book_path(book), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>           
      </tr>
    <% end %>
    </tbody>
  </table>

    <h2>New book</h2>
    <%= form_for(@book) do |f| %>
    
    <div class=field>
      <label>Title</label>
      <%= f.text_field :title %>
    </div>
    <div class=field>
      <label>Body</label>
      <%= f.text_area :body %>
    </div>
    <div class=actions>
      <%= f.submit 'Create Book' %>
    </div>
    <% end %>
   </body>